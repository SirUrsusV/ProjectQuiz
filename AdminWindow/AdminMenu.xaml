<Page x:Class="ProjectQuiz.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectQuiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenu"
      FontFamily="Constantia" FontSize="20">
    <Grid x:Name="GridMenu">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="HelloText"  Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" TextAlignment="Center"/>
        <Button Content="Редактирование учётных записей" Click="RedactUsers_Click"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray"/>
        <Button Content="Редактирование Викторин"        Click="RedactQuizes_Click" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Background="Gray"/>
        <Button Content="Выход"                          Click="Exit_Click"         Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray"/>
    </Grid>
</Page>
